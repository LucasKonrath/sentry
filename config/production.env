# Production Environment Configuration
GITHUB_TOKEN=ghp_your_github_token_here
OPENAI_API_KEY=sk-your_openai_api_key_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Target repositories (comma-separated)
TARGET_REPOS=myorg/repo1,myorg/repo2,anotherorg/repo3

# Coverage settings
COVERAGE_THRESHOLD=80
MIN_COVERAGE_INCREASE=5

# Server settings
PORT=5000
LOG_LEVEL=INFO
DEBUG=False

# Optional: Database settings
DATABASE_URL=postgresql://analyzer:password@postgres:5432/pr_analyzer
POSTGRES_DB=pr_analyzer
POSTGRES_USER=analyzer
POSTGRES_PASSWORD=secure_password_here
POSTGRES_PORT=5432

# Optional: Redis settings
REDIS_URL=redis://redis:6379/0

# Security settings
FLASK_SECRET_KEY=your_flask_secret_key_here

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here
